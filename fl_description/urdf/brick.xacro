<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find fl_description)/urdf/parameters.xacro"/>

    <xacro:macro name="brick_macro" params="xyz parent name size">

        <joint name="${name}_joint" type="floating">
            <axis xyz="0 1 0"/>
            <origin xyz="${xyz}" rpy="0 0 0"/>
            <parent link="${parent}"/>
            <child link="${name}"/>
            <dynamics damping="7.0" friction="2.0"/>
        </joint>

        <link name="${name}">
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="${size}"/>
                </geometry>
                <surface>
                    <friction>
                        <ode mu="10.0" mu2="10.0" fdir1="1 1 1" slip1="1" slip2="1"/>
                    </friction>
                    <bounce restitution_coefficient="1" threshold="1000000.0"/>
                    <contact>
                        <ode soft_cfm="1" soft_erp="0.2" kp="1e10" kd="1.0" max_vel="1.0" min_depth="0.0001"/>
                    </contact>
                </surface>
            </collision>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="${size}"/>
                </geometry>
            </visual>
            <inertial>
                <mass value="0.1"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <box_inertia m="0.1" x="${table_size}" y="${table_size}" z="${table_size}"/>
                <inertia ixx="1.0" ixy="1.0" ixz="1.0" iyy="1.0" iyz="1.0" izz="1.0"/>
            </inertial>
        </link>
        <gazebo reference="${name}">
            <turnGravityOff>false</turnGravityOff>
            <material>Gazebo/Red</material>
                <mu1>1</mu1>
            <mu2>1</mu2>
            <selfCollide>true</selfCollide>
        </gazebo>
    </xacro:macro>

</robot>
